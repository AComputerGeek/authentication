<html lang="en">
 <head>
   <meta charset="UTF-8" />
   <meta http-equiv="X-UA-Compatible" content="IE=edge" />
   <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   <script src="https://kit.fontawesome.com/c94924b3aa.js" crossorigin="anonymous"></script>
   <title>Document</title>
 </head>

 <body>
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body text-center">
        <h1 class="mb-3">
          <img src="/secure-icon.png" alt="icon" width="20%" />
        </h1>
  
        <h2>Login</h2>
        <form action="/auth/login" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
  
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
  
        <br>
  
        <form action="/auth/github" method="get">
          <button class="btn btn-primary btn-block"><i class="fa-brands fa-github"></i>&nbsp;Login with GitHub</button>
        </form>
        
        <p class="mt-4">New User? <a href="/auth/register">Register</a></p>
        <p>Forgot Password? <a href="/auth/forgot">Reset</a></p>
      </div>
    </div>
  </div>  
 </body>
</html>
